<Page
    x:Class="Notepads.Extensions.DiffViewer.SideBySideDiffViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Notepads.Extensions.DiffViewer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlForegroundTransparentBrush}">

    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Name="LeftScroller" IsTabStop="False" Padding="6" Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>
                <RichTextBlock FontFamily="Consolas" Name="LeftBox" IsTextSelectionEnabled="False" ></RichTextBlock>
            </Grid>
        </ScrollViewer>
        <ScrollViewer  Name="RightScroller" IsTabStop="False" Padding="6" Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>
                <RichTextBlock FontFamily="Consolas" Name="RightBox" IsTextSelectionEnabled="False" ></RichTextBlock>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
